{
  "prompts": [
    {
      "name": "certificate-analysis",
      "description": "Comprehensive certificate chain analysis workflow",
      "handler": "handleCertificateAnalysisPrompt",
      "arguments": [
        {
          "name": "certificate_path",
          "description": "Path to certificate file or base64-encoded certificate data",
          "required": true
        }
      ],
      "audience": ["user", "assistant"],
      "priority": 1.0,
      "meta": {
        "category": "analysis",
        "workflow": "comprehensive"
      }
    },
    {
      "name": "expiry-monitoring",
      "description": "Monitor certificate expiration dates and generate renewal alerts",
      "handler": "handleExpiryMonitoringPrompt",
      "arguments": [
        {
          "name": "certificate_path",
          "description": "Path to certificate file or base64-encoded certificate data",
          "required": true
        },
        {
          "name": "alert_days",
          "description": "Number of days before expiry to alert (default: 30)",
          "required": false
        }
      ],
      "audience": ["user", "assistant"],
      "priority": 0.9,
      "meta": {
        "category": "monitoring",
        "workflow": "renewal"
      }
    },
    {
      "name": "security-audit",
      "description": "Perform comprehensive SSL/TLS security audit on a server",
      "handler": "handleSecurityAuditPrompt",
      "arguments": [
        {
          "name": "hostname",
          "description": "Target hostname to audit",
          "required": true
        },
        {
          "name": "port",
          "description": "Port number (default: 443)",
          "required": false
        }
      ],
      "audience": ["user", "assistant"],
      "priority": 0.8,
      "meta": {
        "category": "security",
        "workflow": "audit"
      }
    },
    {
      "name": "troubleshooting",
      "description": "Troubleshoot common certificate and TLS issues",
      "handler": "handleTroubleshootingPrompt",
      "arguments": [
        {
          "name": "issue_type",
          "description": "Type of issue: 'chain', 'validation', 'expiry', 'connection'",
          "required": true
        },
        {
          "name": "certificate_path",
          "description": "Path to certificate file or base64-encoded certificate data (for chain/validation/expiry issues)",
          "required": false
        },
        {
          "name": "hostname",
          "description": "Target hostname (for connection issues)",
          "required": false
        }
      ],
      "audience": ["user", "assistant"],
      "priority": 0.7,
      "meta": {
        "category": "support",
        "workflow": "diagnostic"
      }
    }
  ]
}
