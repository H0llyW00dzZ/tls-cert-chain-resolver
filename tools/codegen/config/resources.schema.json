{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "mimeType": {
            "type": "string",
            "minLength": 1
          },
          "handler": {
            "type": "string",
            "minLength": 1
          },
          "audience": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["user", "assistant"]
            }
          },
          "priority": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 10.0
          },
          "meta": {
            "type": "object"
          }
        },
        "required": ["uri", "name", "description", "mimeType", "handler"]
      }
    }
  },
  "required": ["resources"]
}
